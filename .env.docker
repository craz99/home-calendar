# Home Calendar Docker Environment Template
# Copy this to .env and fill in your values, then run:
#   docker-compose up -d
#
# Or set these as environment variables in docker-compose.yml

# Required configuration
NODE_ENV=production
PORT=5500

# Weather API Key (REQUIRED)
# Get free key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Default weather location (latitude, longitude)
# Examples:
#   New York: 40.7128, -74.0060
#   London: 51.5074, -0.1278
#   Sydney: -33.8688, 151.2093
WEATHER_DEFAULT_LATITUDE=40.7128
WEATHER_DEFAULT_LONGITUDE=-74.0060

# Optional: Cache duration in milliseconds
# 600000 = 10 minutes (good for production)
# 60000 = 1 minute (good for development)
CACHE_DURATION_MS=600000

# Optional: Calendar event IDs to ignore (comma-separated)
IGNORED_EVENT_IDS=

# Optional: API base URL (for multi-domain setups)
API_BASE_URL=

# Optional: OctoPrint 3D Printer Monitoring
# Leave these blank to disable OctoPrint integration
OCTOPRINT_URL=
OCTOPRINT_API_KEY=
OCTOPRINT_REFRESH_INTERVAL_SECONDS=60

# Optional: MQTT for IoT Devices (e.g., garage door)
# Leave these blank to disable MQTT integration
MQTT_BROKER=
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_GARAGE_DOOR_TOPIC=
