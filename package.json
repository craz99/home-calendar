{
  "name": "calendar-app",
  "version": "0.1.0",
  "private": true,
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "deploy": "npm run build && rsync -avz --delete . user@192.168.10.62:~/calendar_app --exclude='.history' --exclude='.git' --exclude='.vscode' --exclude='node_modules' --exclude='client/node_modules' --exclude='.env*' --exclude='client/.env*' && ssh user@192.168.10.62 pm2 restart 0",
    "deploy_test": "npm run build && rsync -avz --delete . dietpi@100.68.65.86:~/calendar_app --exclude='.history' --exclude='.git' --exclude='.vscode' --exclude='node_modules' --exclude='client/node_modules' --exclude='.env*' --exclude='client/.env*' && ssh dietpi@100.68.65.86 pm2 restart 0",
    "test": "NODE_NO_WARNINGS=1 NODE_OPTIONS=--experimental-vm-modules jest",
    "test_verbose": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:debug": "NODE_NO_WARNINGS=1 NODE_OPTIONS=\"--experimental-vm-modules --inspect-brk\" jest --runInBand",
    "lint": "eslint ."
  },
  "dependencies": {
    "axios": "^1.13.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "luxon": "^3.7.2",
    "moment-timezone": "^0.6.0",
    "mqtt": "^5.14.1",
    "node-fetch": "^3.3.2",
    "node-ical": "^0.22.1",
    "nodemon": "^3.1.10",
    "rrule": "^2.8.1",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-junit": "^16.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "type": "module"
